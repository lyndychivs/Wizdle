<Window x:Class="Wizdle.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wizdle.Wpf"
        mc:Ignorable="d"
        Title="Wizdle"
        Height="1000"
        Width="850"
        MinHeight="950"
        MinWidth="700"
        Icon="/Resources/logo.png"
        Background="#121213">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Image x:Name="WizdleTitle" Grid.Row="0"
               Source="/Resources/title.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               MaxHeight="150"
               Stretch="Uniform"
               RenderOptions.BitmapScalingMode="HighQuality"
               RenderOptions.EdgeMode="Aliased"
               UseLayoutRounding="True"
               SnapsToDevicePixels="True"
               Margin="0,10,0,10" />
        <TextBlock Grid.Row="1"
                   Text="Correct"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Margin="0,20,0,0" />
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <TextBox x:Name="CorrectTextBox1"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#538D4E"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox2"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#538D4E"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox3"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#538D4E"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox4"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#538D4E"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox5"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#538D4E"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
        </StackPanel>
        <TextBlock Grid.Row="3"
                   Text="Misplaced"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Margin="0,20,0,0" />
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <TextBox x:Name="MisplacedTextBox1"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#B59F3B"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox2"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#B59F3B"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox3"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#B59F3B"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox4"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#B59F3B"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox5"
                     Width="60"
                     Height="60"
                     MaxLength="1"
                     Text="?"
                     FontSize="32"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#B59F3B"
                     Foreground="#FFFFFF"
                     BorderBrush="#3A3A3C"
                     BorderThickness="2"
                     Margin="5" />
        </StackPanel>
        <TextBlock Grid.Row="5"
                   Text="Excluded"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Margin="0,20,0,0" />
        <TextBox x:Name="ExcludedTextBox"
                 Grid.Row="6"
                 Width="350"
                 Height="60"
                 MaxLength="26"
                 FontSize="24"
                 FontWeight="Bold"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="#3A3A3C"
                 Foreground="#FFFFFF"
                 BorderBrush="#565758"
                 BorderThickness="2"
                 HorizontalAlignment="Center"
                 Margin="0,20,0,0" />
        <Button x:Name="SolveButton"
                Grid.Row="7"
                Content="Solve"
                Width="150"
                Height="50"
                FontSize="20"
                FontWeight="Bold"
                Background="#538D4E"
                Foreground="#FFFFFF"
                BorderBrush="#3A3A3C"
                BorderThickness="2"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="SolveButton_Click"
                Cursor="Hand" />
        <TextBlock x:Name="ResultsLabel"
                   Grid.Row="8"
                   Text="Results"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#FFFFFF"
                   Margin="0,20,0,0"
                   Visibility="Hidden" />
        <ListBox x:Name="ResultsListBox"
                 Grid.Row="9"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="350"
                 MaxHeight="300"
                 FontSize="18"
                 Background="#121213"
                 Foreground="#FFFFFF"
                 BorderBrush="#3A3A3C"
                 BorderThickness="2"
                 Margin="0,20,0,20"
                 Visibility="Hidden" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               Padding="5"
                               TextAlignment="Center"
                               Foreground="#FFFFFF"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Grid.Row="10"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,10,15,10">
            <Hyperlink NavigateUri="https://github.com/lyndychivs/Wizdle"
                       RequestNavigate="Hyperlink_RequestNavigate"
                       Foreground="#818384"
                       TextDecorations="None">
                <Run Text="GitHub - lyndychivs - Wizdle - 2026"/>
            </Hyperlink>
        </TextBlock>
    </Grid>
</Window>
