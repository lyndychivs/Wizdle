<Window x:Class="Wizdle.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wizdle.Wpf"
        mc:Ignorable="d"
        Title="Wizdle"
        Height="1000"
        Width="850"
        MinHeight="800"
        MinWidth="700"
        Icon="/Resources/logo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="WizdleTitle" Grid.Row="0"
               Source="/Resources/title.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               MaxHeight="200"
               Stretch="Uniform"
               Margin="0,10,0,10" />
        <TextBlock Grid.Row="1"
                   Text="Correct"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,20,0,0" />
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <TextBox x:Name="CorrectTextBox1"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox2"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox3"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox4"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox5"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
        </StackPanel>
        <TextBlock Grid.Row="3"
                   Text="Misplaced"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,20,0,0" />
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <TextBox x:Name="MisplacedTextBox1"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#FFFFE0"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox2"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#FFFFE0"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox3"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#FFFFE0"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox4"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#FFFFE0"
                     Margin="5" />
            <TextBox x:Name="MisplacedTextBox5"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#FFFFE0"
                     Margin="5" />
        </StackPanel>
        <TextBlock Grid.Row="5"
                   Text="Excluded"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,20,0,0" />
        <TextBox x:Name="ExcludedTextBox"
                 Grid.Row="6"
                 Width="300"
                 Height="50"
                 MaxLength="26"
                 FontSize="24"
                 FontWeight="Bold"
                 TextAlignment="Center"
                 VerticalContentAlignment="Center"
                 Background="#D3D3D3"
                 HorizontalAlignment="Center"
                 Margin="0,20,0,0" />
        <Button x:Name="SolveButton"
                Grid.Row="7"
                Content="Solve"
                Width="150"
                Height="50"
                FontSize="20"
                FontWeight="Bold"
                HorizontalAlignment="Center"
                Margin="0,20,0,0"
                Click="SolveButton_Click" />
        <TextBlock x:Name="ResultsLabel"
                   Grid.Row="8"
                   Text="Results"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,20,0,0"
                   Visibility="Hidden" />
        <ListBox x:Name="ResultsListBox"
                 Grid.Row="9"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Top"
                 Width="400"
                 MaxHeight="300"
                 FontSize="18"
                 Margin="0,20,0,20"
                 Visibility="Hidden" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}"
                               Padding="5"
                               TextAlignment="Center"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>
