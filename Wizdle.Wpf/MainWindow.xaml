<Window x:Class="Wizdle.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wizdle.Wpf"
        mc:Ignorable="d"
        Title="Wizdle" Height="700" Width="800" Icon="/Resources/logo.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image x:Name="WizdleTitle" Grid.Row="0"
               Source="/Resources/title.png"
               HorizontalAlignment="Center"
               VerticalAlignment="Top"
               MaxHeight="200"
               Stretch="Uniform"
               Margin="0,10,0,10" />
        <TextBlock Grid.Row="1"
                   Text="Correct"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,20,0,0" />
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,0">
            <TextBox x:Name="CorrectTextBox1"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox2"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox3"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox4"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
            <TextBox x:Name="CorrectTextBox5"
                     Width="50"
                     Height="50"
                     MaxLength="1"
                     Text="?"
                     FontSize="24"
                     FontWeight="Bold"
                     TextAlignment="Center"
                     VerticalContentAlignment="Center"
                     Background="#90EE90"
                     Margin="5" />
        </StackPanel>
    </Grid>
</Window>
