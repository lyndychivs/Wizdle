<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wizdle.Maui.MainPage">
    <ScrollView>
        <VerticalStackLayout Padding="30,0" Spacing="25">
            <Image Source="wizdle_title.png"
                   HeightRequest="185"
                   Aspect="AspectFit"
                   SemanticProperties.Description="Wizdle" />

            <Label Text="Correct"
                   HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Entry x:Name="Correct1"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Green"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Correct2"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Green"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Correct3"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Green"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Correct4"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       BackgroundColor="Green"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Correct5"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Green"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
            </HorizontalStackLayout>

            <Label Text="Misplaced"
                   HorizontalOptions="Center" />

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Entry x:Name="Misplaced1"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Yellow"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Misplaced2"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Yellow"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Misplaced3"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Yellow"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Misplaced4"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Yellow"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
                <Entry x:Name="Misplaced5"
                       WidthRequest="50"
                       HeightRequest="50"
                       MaxLength="1"
                       Placeholder="?"
                       BackgroundColor="Yellow"
                       TextColor="Black"
                       HorizontalTextAlignment="Center"
                       VerticalTextAlignment="Center"
                       FontSize="24" />
            </HorizontalStackLayout>

            <Label Text="Excluded"
                   HorizontalOptions="Center" />

            <Entry x:Name="Excluded"
                   WidthRequest="290"
                   HeightRequest="50"
                   MaxLength="26"
                   BackgroundColor="Gray"
                   TextColor="Black"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Button x:Name="SolveButton"
                    Text="Solve"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    Clicked="OnSolveClicked" />

            <Label x:Name="ResultsLabel"
                   IsVisible="False"
                   Text="Results"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="WordsCollectionView"
                            SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding .}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               FontSize="16"
                               Padding="5" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
